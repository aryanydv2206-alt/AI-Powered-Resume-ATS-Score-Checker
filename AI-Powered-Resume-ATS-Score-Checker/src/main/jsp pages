<%@ page import="com.example.app.model.User" %>
<%@ page session="true" %>
<%
  User u = (User) session.getAttribute("user");
  if (u == null) {
    response.sendRedirect(request.getContextPath() + "/login");
    return;
  }
%>
<html>
<head><title>Dashboard</title></head>
